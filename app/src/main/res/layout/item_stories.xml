<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/backgroundColor"
    android:elevation="3dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp">

    <com.vickystft.instagram.downloader.widget.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/imageViewPlay"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:visibility="gone"
                android:src="@drawable/ic_play_circle"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/imageViewDownload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:backgroundTint="@color/mainColor"
                android:background="@drawable/background_status"
                android:src="@drawable/ic_round_download"
                app:tint="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </com.vickystft.instagram.downloader.widget.SquareLayout>
</androidx.cardview.widget.CardView>